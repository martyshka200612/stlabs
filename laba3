//Laba 3 Variant 10

#include <iostream>
#include <vector>
using namespace std;
int main()
{
    int n = 3;
    int t;
    vector<vector<int>> v3(n, vector<int>(n));;
    int i, j,s1=0,s2=0,el;
    cout <<"\nThe matrix elements: \n\n";
    for(i=0; i<n; i++)
    {
        for(j=0; j<n; j++)
        {
            v3[i][j]= rand() % 20-10;
            cout<<"v3["<<i<<"]["<<j<<"]= " << v3[i][j] <<endl;
        }
    }
    for (i = 0; i < n; i++ ) {
        for ( j = 0; j < n; j++ ) {
            v3[i][j] = v3[n-j-1][n-i-1];
        }
    }
    cout << "\n1) ";
    for (i = 0; i < n; i++)
    {
        bool flag = false;
        int z=1;
        for (j = 0; j < n; j++)
        {
            z *= v3[i][j];
            if(v3[i][j] < 0)
                flag = true;
        }
        if (flag == true)
        {
            cout<<"The product of elements of the line  "<< i << " with negative element = " << z <<"\n\n";
        }
    }
    cout << "\n2) ";

    for (i = 1; i<n-1; i++)   // параллельная диагональ ниже главной
    {
        for (j = 0; j<n-i; j++)
        {
            s1 = s1 + v3[j+i][i];
        }
    }
    for (i = 1; i<n-1; i++)   // параллельная диагональ выше главной
    {
        for (j = 0; j<n-1; j++)
        {
            s2 = s2 + v3[j][j+i];
        }
    }
    if (s1>s2) cout<<"The minimum among the sums of elements of diagonals parallel to the main diagonal of the matrix ="<<s2; else cout<<"The minimum among the sums of elements of diagonals parallel to the main diagonal of the matrix ="<<s1;
    return 0;
}





